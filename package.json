{
    "name": "ts-starter",
    "version": "1.0.0",
    "description": "A modern Express starter with TypeScript, ESM and Hot Reload.",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "node --env-file=.env ./dist/index.js",
        "dev": "nodemon",
        "build": "tsc",
        "lint": "eslint src --ignore-path .eslintignore",
        "publish": "pnpm publish --access public",
        "update": "pnpm version patch && pnpm run build && pnpm run publish",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": {
        "name": "Mateusz Hallala",
        "email": "mateuszhallala@gmail.com",
        "url": "https://github.com/hcsvnt"
    },
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/express": "^5.0.6",
        "@types/node": "^24.10.13",
        "eslint": "^9.39.2",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0"
    },
    "dependencies": {
        "express": "^5.2.1"
    },
    "packageManager": "pnpm@9.0.0"
}
